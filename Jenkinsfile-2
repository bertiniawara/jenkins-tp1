pipeline {
    agent any

    stages {
        stage('Deploy App on k8s') {
            steps {
                withCredentials([
                    file(credentialsId: 'kubeconfig')
                ]) {
                    sh 'kubectl --kubeconfig ${CREDENTIALS_kubeconfig} apply -f deployment.yaml'
                    sh 'kubectl --kubeconfig ${CREDENTIALS_kubeconfig} apply -f service.yaml'
                }
            }
        }
    }
}
