pipeline {
    agent any

    stages {
        stage('Deploy App on k8s') {
            steps {
                withCredentials([file(credentialsId: 'minikube-config', variable: 'MINIKUBE-CONFIG')]) {
                    sh 'kubectl --kubeconfig=$MINIKUBE-CONFIG apply -f deployment.yaml'
                    sh 'kubectl --kubeconfig=$MINIKUBE-CONFIG apply -f service.yaml'
                }
            }
        }
    }
}

